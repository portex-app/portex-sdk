{
  "name": "portex-sdk",
  "version": "1.0.0",
  "description": "Portex SDK for game development",
  "main": "dest/portex-sdk.js",
  "types": "dest/portex-sdk.d.ts",
  "scripts": {
    "clean": "rm -rf dest/*",
    "build": "pnpm clean && tsc && node scripts/bundle.js",
    "dev": "tsc -w",
    "test": "jest",
    "lint": "eslint packages/**/*.ts",
    "format": "prettier --write \"packages/**/*.ts\"",
    "docs": "typedoc packages/index.ts",
    "serve": "cd dist && python3 -m http.server 8080"
  },
  "keywords": [
    "sdk",
    "game",
    "portex"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "terser": "^5.39.0",
    "ts-jest": "^29.1.2",
    "typedoc": "^0.28.1",
    "typescript": "^5.3.3"
  }
}